<Window x:Class="NgoDongQuan_a2.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Management" Height="400" Width="700">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
            <Button Content="Search" Command="{Binding SearchCommand}" Margin="0,0,5,0"/>
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0,0,5,0"/>
            <Button Content="Edit" Command="{Binding EditCommand}" Margin="0,0,5,0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" AutoGenerateColumns="True" Margin="5"/>
    </DockPanel>
</Window> 