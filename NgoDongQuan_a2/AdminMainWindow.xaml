<Window x:Class="NgoDongQuan_a2.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Main" Height="400" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome, Admin!" HorizontalAlignment="Center" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="Manage Customers" Width="200" Height="40" Click="ManageCustomers_Click" Margin="0,0,0,10"/>
            <Button Content="Manage Rooms" Width="200" Height="40" Click="ManageRooms_Click" Margin="0,0,0,10"/>
            <Button Content="Manage Bookings" Width="200" Height="40" Click="ManageBookings_Click" Margin="0,0,0,10"/>
            <Button Content="Logout" Width="200" Height="40" Click="Logout_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window> 